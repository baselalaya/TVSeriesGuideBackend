<!DOCTYPE html>
<html>
<head>
  <title>CMS Dashboard</title>
  <style>
    body { font-family: Arial, sans-serif; padding: 20px; }
    ul { list-style: none; padding: 0; }
    li { margin: 10px 0; }
    button { background-color: #FF3B30; color: white; padding: 5px; border: none; border-radius: 5px; }
    a { color: #007AFF; text-decoration: none; margin-right: 10px; }
  </style>
</head>
<body>
  <h1>TV Series CMS</h1>
  <a href="/admin/add">Add New Series</a>
  <ul>
    <% series.forEach(s => { %>
      <li>
        <%= s.title %> - <%= s.description %>
        <a href="/admin/edit/<%= s._id %>">Edit</a>
        <form action="/admin/delete/<%= s._id %>" method="POST" style="display:inline;">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% }) %>
  </ul>
</body>
</html>